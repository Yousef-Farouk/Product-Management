@page
@model Product_Management.Pages.ClientProducts.EditClientProductModel
@{
}


<h1 class="mt-4 mb-3">Edit Client Product</h1>
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <form method="post">
                <input type="hidden" asp-for="ClientProductVm.ClientId" />

                <div class="form-group mt-2">
                    <label asp-for="ClientProductVm.ProductId" class="control-label">Product</label>
                    <select asp-for="ClientProductVm.ProductId" class="form-control" asp-items="Model.ActiveProducts">
                        <option value="">-- Select Product --</option>
                    </select>
                    <span asp-validation-for="ClientProductVm.ProductId" class="text-danger"></span> 
                </div>
                <div class="form-group mt-2">
                    <label asp-for="ClientProductVm.StartDate" class="control-label">Start Date</label>
                    <input asp-for="ClientProductVm.StartDate" class="form-control" type="date" />
                    <span asp-validation-for="ClientProductVm.StartDate" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="ClientProductVm.EndDate" class="control-label">End Date</label>
                    <input asp-for="ClientProductVm.EndDate" class="form-control" type="date" />
                    <span asp-validation-for="ClientProductVm.EndDate" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="ClientProductVm.License" class="control-label"></label>
                    <input asp-for="ClientProductVm.License" data-val="true" data-val-maxlength-max="255" data-val-maxlength="The License must not exceed 255 chars" class="form-control" />
                    <span asp-validation-for="ClientProductVm.License" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <input type="submit" value="Edit Product" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div class="mt-3 mb-3">
        <a asp-page="/Clients/ClientDetails" asp-page-handler="ClientDetails" asp-route-id="@Model.ClientProductVm.ClientId">Back to Client Details</a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}