@page
@model Product_Management.Pages.Products.EditProductModel

@{
    ViewData["Title"] = "EditProduct";
}

<h1>EditProduct</h1>

<div class="contaier">
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                @* <div asp-validation-summary="All" class="text-danger"></div> *@
                <input type="hidden" asp-for="ProductVm.Id" />

                <div class="form-group mt-2 me-2">
                    <label asp-for="ProductVm.Name" class="control-label"></label>
                    <input asp-for="ProductVm.Name" data-val="true" data-val-maxlength-max="50" data-val-maxlength="The Product Name must not exceed 50 chars" class="form-control" />
                    <span asp-validation-for="ProductVm.Name" class="text-danger"></span>
                </div>
                <div class="form-group mt-2 me-2">
                    <label asp-for="ProductVm.Description" class="control-label"></label>
                    <input asp-for="ProductVm.Description" data-val="true" data-val-maxlength-max="150" data-val-maxlength="The Product Description must not exceed 150 chars" class="form-control" />
                    <span asp-validation-for="ProductVm.Description" class="text-danger"></span>
                </div>
             
                <div class="form-group d-flex mt-3">
                    <label class="control-label me-3">Is Active</label>
                    <div class="form-check ms-2 me-2">
                        <input class="form-check-input" type="radio" asp-for="ProductVm.IsActive" value="true" />
                        <label class="form-check-label">Yes</label>
                    </div>
                    <div class="form-check ms-2 me-2">
                        <input class="form-check-input" type="radio" asp-for="ProductVm.IsActive" value="false" />
                        <label class="form-check-label">No</label>
                    </div>
                    <span asp-validation-for="ProductVm.IsActive" class="text-danger"></span>
                </div>
                <div class="form-group mt-3 mb-3">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="Index">Back to List</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
