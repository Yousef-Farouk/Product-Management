@page
@model Product_Management.Pages.Products.EditProductModel

@{
    ViewData["Title"] = "EditProduct";
}

<h1>EditProduct</h1>

<h4>ProductVm</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
