                    <div class="form-check ms-2 me-2">
                        <input class="form-check-input" type="radio" asp-for="ProductVm.IsActive" value="true" />
                        <label class="form-check-label">Yes</label>
                    </div>
                    <div class="form-check ms-2 me-2">
                        <input class="form-check-input" type="radio" asp-for="ProductVm.IsActive" value="false" />
                        <label class="form-check-label">No</label>
                    </div>
                    <span asp-validation-for="ProductVm.IsActive" class="text-danger"></span>
                </div>
                <div class="form-group mt-3 mb-3">
