    ViewData["Title"] = "AddProduct";
}


<h1 class="mt-4 mb-3">Add Product</h1>
<div class="contaier">
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                @* <div asp-validation-summary="All" class="text-danger"></div> *@
                <div class="form-group mt-2 me-2">
                    <label asp-for="ProductVm.Name" class="control-label"></label>
                    <input asp-for="ProductVm.Name" data-val="true" data-val-maxlength-max="2" data-val-maxlength="The field Name must not exceed 2 chars" class="form-control" />
                    <span asp-validation-for="ProductVm.Name" class="text-danger"></span>
